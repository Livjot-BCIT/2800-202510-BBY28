<%- include("templates/header") %>

<!-- Add meta tags for client JS to access -->
<meta name="group-id" content="<%= group._id %>">
<meta name="user-id" content="<%= userId %>">

<div class="header">
    <div class="back-button">
        <button class="back-btn" onclick="location.href='/groups'">
            <i class="fas fa-arrow-left"></i>
        </button>
        <h1><%= group.title %></h1>
    </div>
</div>

<div class="group-header">
    <p class="group-description"><%= group.description %></p>
    <div class="group-members">
        <span><%= group.memberCount %> members</span>
    </div>
</div>

<div class="chat-container" id="chatContainer">
    <!-- Messages will be populated by JavaScript -->
</div>

<div class="input-area">
    <input type="text" id="chatInput" placeholder="Type a message...">
    <button id="sendButton">
        <i class="fas fa-paper-plane"></i>
    </button>
</div>

<!-- Socket.IO client library -->
<script src="/socket.io/socket.io.js"></script>
<script src="/scripts/groupChat-server.js"></script>

<%- include("templates/navbar") %>