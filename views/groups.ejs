<%- include("templates/header") %>

    <div class="search-container mb-4 position-relative" style="max-width: 500px; margin: auto;">
        <input type="text" id="searchInput" class="form-control pe-5" placeholder="Search by group name...">
        <button id="searchBtn" style="position: absolute; right: 0.75rem; top: 50%; transform: translateY(-50%);
                   background: none; border: none; padding: 0; cursor: pointer;">
            <img src="/images/icons/search.svg" alt="Search Icon" style="width: 20px;">
        </button>
    </div>



    <div id="groupContainer" class="container mt-3">
    </div>

    <div class="text-center mt-4 mb-5">
        <div id="loader" style="display: none;">Loading...</div>
    </div>

    <div id="groupModal" class="modal-overlay d-none">
        <div class="modal-content">
            <span id="closeModal" class="close-btn">&times;</span>
            <h2 id="modalTitle"></h2>
            <img id="modalImage" src="" alt="Group image"
                style="width:100%; max-height:200px; object-fit:cover; border-radius:10px;">
            <p id="modalDescription"></p>
            <p><strong>Type:</strong> <span id="modalType"></span></p>
            <p><strong>Members:</strong> <span id="modalMembers"></span></p>
            <button class="btn btn-primary mt-2">Join this group</button>
        </div>
    </div>

    <!-- Floating Create Group Button -->
    <button id="createGroupBtn" class="create-group-fixed-btn">ï¼‹ Create Group</button>

    <!-- Create Group Modal -->
    <div id="createGroupModal" class="modal-overlay d-none">
        <div class="modal-content">
            <span class="close-btn" id="closeCreateModal">&times;</span>
            <h2>Create a New Group</h2>

            <form id="createGroupForm" action="/api/createGroup" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="groupName" class="form-label">Group Name</label>
                    <input type="text" id="groupName" name="groupName" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="groupDescription" class="form-label">Description</label>
                    <textarea id="groupDescription" name="groupDescription" class="form-control" rows="3"
                        required></textarea>
                </div>

                <div class="mb-3">
                    <label for="groupType" class="form-label">Group Type</label>
                    <select id="groupType" name="groupType" class="form-select" required>
                        <option value="" disabled selected>Select a type</option>
                        <option value="Physical">Physical</option>
                        <option value="Financial">Financial</option>
                        <option value="Mental">Mental</option>
                        <option value="Social">Social</option>
                    </select>
                </div>


                <div class="mb-3">
                    <label for="groupImage" class="form-label">Upload Image</label>
                    <input type="file" id="groupImage" name="groupImage" class="form-control" accept="image/*" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>

        </div>
    </div>


    <script src="/scripts/groups.js"></script>

    <%- include("templates/navbar") %>