<%- include("templates/header") %>

    <header class="top-bar">
        <h1>ðŸ”¥ Bet On Yourself</h1>

        <input type="text" id="search" placeholder="Search challenges..." />

        <div class="summary">
            <span id="totalChallenges">
                <%= bets.length %> challenges
            </span> â€¢
            <span id="totalVotes">
                <%= bets.reduce((acc, bet)=> acc + (bet.participants?.length || 0), 0) %> total votes
            </span>
        </div>

        <div class="feed-container" id="feed">
            <% bets.forEach(bet=> { %>
                <div class="post-card" data-id="<%= bet._id %>">
                    <div class="post-header">
                        <strong>
                            <%= bet.betTitle %>
                        </strong>
                        <% if (session.userId && session.userId.toString()===bet.betPoster?.toString()) { %>
                            <button class="edit-btn">â‹®</button>
                            <% } %>
                    </div>

                    <!-- Hidden info -->
                    <div class="post-extra" style="display: none;">
                        <p>
                            <%= bet.description %>
                        </p>
                        <div class="post-meta">
                            <span>
                                <%= bet.duration %>
                            </span> â€¢
                            <span>
                                <%= bet.betType %>
                            </span> â€¢
                            <span>
                                <%= bet.participants.length %> joined
                            </span>
                        </div>
                    </div>

                    <div class="post-actions">
                        <button class="accept-btn">
                            <i class="fa-solid fa-flag-checkered"></i> Accept
                        </button>
                    </div>
                </div>
                <% }); %>
        </div>
    </header>

