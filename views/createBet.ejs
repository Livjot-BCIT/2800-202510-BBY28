<%- include("templates/header") %>

<form action="/createBet" method="POST" class="betâ€form">
  <span style="font-size: 20px"><strong>Create a bet</strong></span>

  <input
    type="text"
    id="betTitle"
    name="betTitle"
    placeholder="Bet"
    required
  />

  <!-- Number + unit dropdown for duration -->
  <div class="duration-group">
    <input
      type="number"
      id="durationValue"
      name="durationValue"
      min="1"
      placeholder="Amount"
      required
    />
    <select id="durationUnit" name="durationUnit" required>
      <option value="" disabled selected>Time</option>
      <option value="hours">Hours</option>
      <option value="days">Days</option>
      <option value="weeks">Weeks</option>
      <option value="months">Months</option>
    </select>
  </div>

  <input
    type="number"
    id="participants"
    name="participants"
    min="1"
    placeholder="Participants"
    required
  />

  <select name="betType" id="betType" required>
    <option value="" disabled selected>Bet Type</option>
    <option value="Physical">Physical</option>
    <option value="Financial">Financial</option>
    <option value="Mental">Mental</option>
    <option value="Social">Social</option>
    <option value="Other">Other</option>
  </select>

  <textarea
    id="description"
    name="description"
    placeholder="Description"
    required
  ></textarea>

  <div id="checkboxContainer">
    <input type="checkbox" id="privateBet" name="privateBet" />
    <label for="privateBet">Private bet</label>
  </div>

  <input type="submit" id="button" value="Place your Bets!" />
</form>

